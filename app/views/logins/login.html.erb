<%= form_tag '/logins/val', method: :post, data: { turbo: false } do %>
    <%= label_tag :uid, 'ユーザーID' %>
    <%= text_field_tag :uid %><br>
    <%= label_tag :pass, 'パスワード' %>
    <%= password_field_tag :pass %><br>
    <%= radio_button_tag :rl, :in %>
    <%= label_tag :rl_in, "ログイン"%>
    <%= radio_button_tag :rl, :regi %>
    <%= label_tag :rl_regi, "ユーザー登録"%><br>
    <%= submit_tag '登録' %>
<% end %>